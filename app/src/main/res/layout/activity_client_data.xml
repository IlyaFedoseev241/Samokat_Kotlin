<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ClientDataActivity">
    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Куда доставить?"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/lexend_medium"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"

            >
        </TextView>
        <EditText
            android:id="@+id/client_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Введите адрес"
            android:fontFamily="@font/lexend_medium"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/phone_edtext"

            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        >
        <EditText
            android:id="@+id/client_entrance"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="Подъезд"
            android:fontFamily="@font/lexend_medium"
            android:textAlignment="center"

            android:layout_marginTop="40dp"
            android:background="@drawable/phone_edtext"

            >
        </EditText>
        <EditText
            android:id="@+id/client_intercom"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="Домофон"
            android:fontFamily="@font/lexend_medium"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/phone_edtext"

            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        >
        <EditText
            android:id="@+id/client_apartment"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="Квартира"
            android:fontFamily="@font/lexend_medium"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/phone_edtext"

            >
        </EditText>
        <EditText
            android:id="@+id/client_floor"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:hint="Этаж"
            android:fontFamily="@font/lexend_medium"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/phone_edtext"

            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linear_3"
        >
        <EditText
            android:id="@+id/client_comment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Комментарий к заказу"
            android:fontFamily="@font/lexend_medium"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/phone_edtext"

            >
        </EditText>
        <Button
            android:id="@+id/client_checkout"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/code_button"
            android:text="Оформить заказ"
            android:fontFamily="@font/lexend_medium"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"

            >
        </Button>
    </LinearLayout>


</RelativeLayout>