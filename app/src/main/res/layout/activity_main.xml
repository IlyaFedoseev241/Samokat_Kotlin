<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authorization.MainActivity"
    android:background="@color/pink">
    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="@drawable/samokat_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        >
    </ImageView>

    <Button
        android:id="@+id/main_address"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_below="@id/main_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/address_button"
        android:fontFamily="@font/lexend_medium"
        android:text="@string/register"
        android:textColor="@color/pink"
        android:textSize="16sp"
        >

    </Button>
    <Button
        android:id="@+id/main_input"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_below="@+id/main_address"
        android:text="@string/input"
        android:textColor="@color/white"
        android:fontFamily="@font/lexend_medium"
        android:textSize="16sp"
        android:background="@drawable/button_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >
    </Button>




</RelativeLayout>